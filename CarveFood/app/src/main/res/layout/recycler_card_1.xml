<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_back"
        android:padding="10dp">



        <TextView
            android:id="@+id/card_item_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"

            app:drawableStartCompat="@drawable/ic_baseline_fastfood_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/card_item_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_item_name1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            app:drawableStartCompat="@drawable/ic_baseline_description_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/card_item_ing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_item_desc1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            app:drawableStartCompat="@drawable/ic_baseline_ingredients_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/card_item_cost1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_item_ing1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            app:drawableStartCompat="@drawable/ic_rupee"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/card_extra_ing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_item_cost1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            app:drawableStartCompat="@drawable/ic_baseline_ingredients_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/card_extra_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_extra_ing1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            app:drawableStartCompat="@drawable/ic_baseline_description_24"
            android:drawablePadding="5dp"/>

        <Button
            android:id="@+id/card_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:fontFamily="@font/poppins_light"
            android:layout_below="@id/card_extra_msg1"
            android:layout_marginTop="20dp"
            android:backgroundTint="#09940E"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>